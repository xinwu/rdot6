. /etc/init.d/functions

cd /etc/sysconfig/network-scripts
. ./network-functions

[ -f ../network ] && . ../network

CONFIG=${1}

need_config ${CONFIG}

source_config

case "$TYPE" in
        IVSIntPort)
                state=$(systemctl status ivs | grep running)
                if [ -z "$state" ]; then
                    systemctl restart ivs
                fi
                ports=$(ivs-ctl show | grep -E "^\s+[0-9]" | grep -v "internal")
                if [ -z "$ports" ]; then
                    systemctl restart ivs
                fi
                intf=$(ivs-ctl list-ports | grep "$DEVICE")
                if [ -z $intf ]; then
                    ivs-ctl add-internal-port "$DEVICE"
                fi
                ifconfig "$DEVICE" "$IPADDR" netmask "$NETMASK"
                ;;
        *)
                echo $"Invalid IVS interface type $TYPE"
                exit 1
                ;;
esac

